<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstLine"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:text="full screen"
            android:layout_gravity="center"
            android:background="#b2dfdb" />

        <TextView
            android:id="@+id/secondLine"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:text="frame layout"
            android:layout_gravity="center"
            android:background="#80cbc4" />

        <TextView
            android:id="@+id/thirdLine"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:text="table layout"
            android:layout_gravity="center"
            android:background="#4db6ac" />

        <TextView
            android:id="@+id/fourthLine"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:text="constraint layout"
            android:layout_gravity="center"
            android:background="#26a69a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#b2dfdb"
            android:gravity="center"
            android:onClick="bindSvr"
            android:text="bind svr (create automatically)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#80cbc4"
            android:gravity="center"
            android:onClick="unbindSvr"
            android:text="unbind svr (destroy automatically)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#4db6ac"
            android:gravity="center"
            android:onClick="bindASvr"
            android:text="bind aidl svr (create automatically)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#26a69a"
            android:gravity="center"
            android:onClick="unbindASvr"
            android:text="unbind aidl svr (destroy automatically)" />

        <TextView
            android:id="@+id/svrStr"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#7ECAC3"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>